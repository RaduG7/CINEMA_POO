<Window x:Class="CinemaUI.ChangeTheat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaUI"
        mc:Ignorable="d"
        Title="ChangeTheater" Height="450" Width="800">
    <Grid >
        <Button Grid.Column="0" Grid.Row="0" Content="Inapoi" 
                Background="Transparent"
                BorderThickness="0" Click="Back1" 
                FontFamily="Segoe UI Variable Text Semibold" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        
        <ListBox Name="moviesListBox" Width="250" Height="200" Margin="10,10,0,0" 
         VerticalAlignment="Top" HorizontalAlignment="Left" 
         SelectionChanged="MoviesListBox_SelectionChanged"/>

        <ListBox Name="datesListBox" Width="250" Height="200" Margin="300,10,0,0" 
         VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Text="Introduceti sala in care doriti sa rulati filmul(1-3)" Margin="0,250,0,-1" FontWeight="Bold" />
        <TextBox Name="idSala" HorizontalAlignment="Center" VerticalAlignment="Center" 
                  Margin="130,100,250,0" Width="100"/>
        <Button Content="Schimba sala" Width="120" Height="30" Margin="60,280,0,0" 
         VerticalAlignment="Top" HorizontalAlignment="Left" Click="ChangeSala"/> 
    </Grid>
</Window>
