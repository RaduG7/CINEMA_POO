<Window x:Class="CinemaUI.AddMov"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CinemaUI"
        mc:Ignorable="d"
        Title="AddMovie" Height="470" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="Inapoi" 
                Background="Transparent"
                BorderThickness="0" Click="Back" 
                FontFamily="Segoe UI Variable Text Semibold"/>
        <TextBlock Text="Introduceti numarul salii" Grid.Row="1"
                   Grid.Column="1" FontSize="18" FontFamily="Times New Roman"
                   Margin="0 70 0 0"/>
        <TextBox x:Name="room" Grid.Row="1" Grid.Column="2" Width="150" 
                 Margin="10 70 0 0"/>
        <TextBlock Text="Introduceti titlul filmului" Grid.Row="2"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="title" Grid.Row="2" Grid.Column="2" Width="150" 
                Margin="10 10 0 0"/>
        <TextBlock Text="Introduceti durata filmului in formar de minute" Grid.Row="3"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="duration" Grid.Row="3" Grid.Column="2" Width="150" 
                 Margin="10 10 0 0"/>
        <TextBlock Text="Introduceti descrierea filmului" Grid.Row="4"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="description" Grid.Row="4" Grid.Column="2" Width="150" 
                Margin="10 10 0 0"/>
        <TextBlock Text="Introduceti anul" Grid.Row="5"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="year" Grid.Row="5" Grid.Column="2" Width="150" 
            Margin="10 10 0 0"/>
        <TextBlock Text="Introduceti luna" Grid.Row="6"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="month" Grid.Row="6" Grid.Column="2" Width="150" 
                Margin="10 10 0 0"/>
        <TextBlock Text="Introduceti ziua" Grid.Row="7"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="day" Grid.Row="7" Grid.Column="2" Width="150" 
                Margin="10 10 0 0"/>
        <TextBlock Text="Introduceti ora" Grid.Row="8"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="hour" Grid.Row="8" Grid.Column="2" Width="150" 
                Margin="10 10 0 0"/>
        <TextBlock Text="Introduceti minutul" Grid.Row="9"
                Grid.Column="1" FontSize="18" FontFamily="Times New Roman" Margin="0 10 0 0"/>
        <TextBox x:Name="minute" Grid.Row="9" Grid.Column="2" Width="150" 
                Margin="10 10 0 0"/>
        <Button Grid.Row="10" Grid.Column="3" Content="Adauga film" Width="100" Height="30" Margin="40 0 0 0" Click="AddNewMovie"/>
    </Grid>
</Window>
